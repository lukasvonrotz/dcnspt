<h1>All Employees</h1>
</br>
<a href="<%=new_employee_path%>" class="btn btn-success">Create new employee</a>
</br></br></br>
<% if @employees.nil? %>
    No employees in database.
<% else %>
    <div id="loading"  style="width: 100%; text-align: center;">
      <p><%= image_tag('spinner.gif', width: '300') %></p>
      <p>Loading data...</p>
    </div>

    <div id="content" class="table-responsive" style="display: none;">
      <table class="table table-striped table-bordered data_table" cellspacing="0" width="100%">
        <thead>
          <tr>
            <th>ID</th>
            <th>Code</th>
            <th>First name</th>
            <th>Last name</th>
            <th>Location (Latitude)</th>
            <th>Location (Longitude)</th>
            <th>Cost Rate</th>
            <th>Job Profile</th>
            <th>Assigned Projects</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tfoot>
          <tr>
            <th>ID</th>
            <th>Code</th>
            <th>First name</th>
            <th>Last name</th>
            <th>Location (Latitude)</th>
            <th>Location (Longitude)</th>
            <th>Cost Rate</th>
            <th>Job Profile</th>
            <th>Assigned Projects</th>
            <th>Actions</th>
          </tr>
        </tfoot>
        <tbody>
        <% @employees.each do |employee| %>
            <tr>
              <td><%= link_to employee.id, employee_path(employee.id) %></td>
              <td><%= employee.code %></td>
              <td><%= employee.firstname %></td>
              <td><%= employee.surname %></td>
              <td><%= employee.loclat %></td>
              <td><%= employee.loclon %></td>
              <td><%= employee.costrate %></td>
              <td><%= employee.jobprofile.name %></td>
              <td>
                <ul style="padding-left: 15px;">
                  <% employee.projects.each do |project| %>
                      <li><%= link_to project.name, project_path(project.id) %></li>
                  <% end %>
                </ul>
              </td>
              <td>
                <a href="<%= employee_path(employee.id) %>" class="btn btn-xs btn-default">Show</a>
                <a href="<%= edit_employee_path(employee.id) %>" class="btn btn-xs btn-info">Edit</a>
                <%= link_to "Edit criteria values", employee_criterionvalues_path(employee.id), class: "btn btn-xs btn-info" %>
                <button type="button" class="btn btn-xs btn-danger" data-toggle="modal" data-target="#popup_sure_delete" data-employeeid="<%= employee.id %>">Delete</button>
              </td>
        <% end %>
        </tr>
        </tbody>
      </table>
    </div>
<% end %>


<div class="modal fade" id="popup_sure_delete" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Confirmation</h4>
      </div>
      <div class="modal-body">
        <p>Are you sure to delete this employee?</p>
      </div>
      <div class="modal-footer">
        <%= link_to 'Delete employee', "#", :method => :delete, :class => "btn btn-danger btn-delete", data: { disable_with: 'Processing...' } %>
        <button type="button" class="btn btn-info" data-dismiss="modal">Cancel</button>
      </div>
    </div>
  </div>
</div>


<input type="hidden" id="refresh" value="no">


<script>
  $('#popup_sure_delete').on('show.bs.modal', function (event) {
    var button = $(event.relatedTarget) // Button that triggered the modal
    var project = button.data('employeeid') // Extract info from data-* attributes
    // If necessary, you could initiate an AJAX request here (and then do the updating in a callback).
    // Update the modal's content. We'll use jQuery here, but you could use a data binding library or other methods instead.
    var modal = $(this)
    modal.find('.btn-delete').attr("href", '/employees/' + project)
    modal.find('.btn-delete').attr("text", 'Yes')
  });

  $(document).ready(function() {
    $("#loading").hide();
    $("#content").show();
    var $input = $('#refresh');
    if ($input.val() == 'yes') {
      location.reload(true);
      $("#loading").show();
      $("#content").hide();
    }
    else {
      $input.val('yes');
    }
  });
</script>
