<!DOCTYPE html>
<html>
<head>
  <title>ELECTRE</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= favicon_link_tag 'favicon.ico' %>
</head>
<body>
  <%= render 'layouts/navigation' %>
  <div class="container" style="width: 100%;">
    <div class="row">
      <div class="col-lg-12">
        <% if notice %>
            <div class="alert alert-info fade in">
              <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
              <%= notice %>
            </div>
        <% end %>

        <% if alert %>
            <div class="alert alert-danger fade in">
              <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
              <%= alert %>
            </div>
        <% end %>

        <%= yield %>
      </div>
    </div>
  </div>
  <footer style="height: 100px; background-color: white; margin-top: 50px;"></footer>

  <script>
    $('.tokenize').tokenfield({
      autocomplete: {
        source: [<% Jobprofile.all.each do |jobprofile| %>"<%= jobprofile.name %>",<% end %>],
        delay: 100,
        minLength: 2
      },
      showAutocompleteOnFocus: true
    });

    $(document).ready(function() {
      $('.data_table').DataTable({
        "pageLength": 50,
        "language": {
          "decimal":        "",
          "emptyTable":     "No records found",
          "info":           "Show _START_ to _END_ of _TOTAL_ entries",
          "infoEmpty":      "Show 0 to 0 of 0 entries",
          "infoFiltered":   "(filtered of _MAX_ total entries)",
          "lengthMenu":     "Show _MENU_ entries",
          "loadingRecords": "Loading records",
          "processing":     "Processing...",
          "search":         "Search",
          "zeroRecords":    "0 records",
          "paginate": {
            "first":      "First",
            "last":       "Last",
            "next":       "Next",
            "previous":   "Previous"
          }
        }});
    });

  </script>
</body>
</html>
